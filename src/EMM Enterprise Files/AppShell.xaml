<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EMM_Enterprise_Files.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EMM_Enterprise_Files"
    Shell.FlyoutBehavior="Flyout"
    Title="EMM_Enterprise_Files">
    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">

        <ShellContent
            Title="Profiles"
            Icon="cart.png"
        ContentTemplate="{DataTemplate local:MainPage}"
        />
        <ShellContent
            Icon="info.png"
            Title="About"
        ContentTemplate="{DataTemplate local:About}" FlyoutItemIsVisible="True"
         />

    </FlyoutItem>
   

</Shell>
